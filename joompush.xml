	<name>plg_system_joompush</name>
	<author>Weppsol</author>
	<creationDate>Jan 2017</creationDate>
	<copyright>Copyright (C) 2016 Weppsol Technologies. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>contact@weppsol.com</authorEmail>
	<authorUrl>https://weppsol.com</authorUrl>
	<version>1.3.2</version>
	<description>PLG_SYSTEM_JOOMPUSH_XML_DESCRIPTION</description>
	<files>
		<folder>asset</folder>
		<filename plugin="joompush">joompush.php</filename>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_joompush.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_joompush.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="notification_widget" type="radio" label="COM_JOOMPUSH_FORM_LBL_NOTIFICATION_WIDGET" description="COM_JOOMPUSH_FORM_DESC_NOTIFICATION_WIDGET" hint="COM_JOOMPUSH_FORM_LBL_NOTIFICATION_WIDGET">
				  <option value="1">Yes</option>
				  <option value="0">No</option>
				</field>
				<field name="notification_count" type="text" default="10" label="COM_JOOMPUSH_FORM_LBL_NOTIFICATION_COUNT" description="COM_JOOMPUSH_FORM_DESC_NOTIFICATION_COUNT" hint="COM_JOOMPUSH_FORM_LBL_NOTIFICATION_COUNT"/>

			</fieldset>
		</fields>
	</config>
</extension>
